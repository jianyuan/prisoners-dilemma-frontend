<h4>Points</h4>
<table class="table table-bordered">
  <thead>
    <tr>
      <th class="text-right">Player</th>
      <th>Points</th>
    </tr>
  </thead>
  <tbody>
    <% $.each(points, function(i, player) { %>
      <tr>
        <td class="text-right">

          <% if (player.id == algorithmId) { %><span class="glyphicon glyphicon-chevron-right"></span><% } %>

          <% if (player.id == algorithmId) { %><strong><% } %>

            <%- names[player.id] %>

          <% if (player.id == algorithmId) { %></strong><% } %>
        </td>
        <td>
          <% if (player.id == algorithmId) { %><strong><% } %>
            <%= player.points %>
          <% if (player.id == algorithmId) { %></strong><% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<h4>Results</h4>
<% $.each(results, function(i, result) { %>
  <table class="table table-bordered table-condensed">
    <thead>
      <tr>
        <th colspan="2" class="text-center">
          <% if (result.players[0] == algorithmId) { %><span class="glyphicon glyphicon-chevron-right"></span><% } %>
          <%- names[result.players[0]] %><br>
          vs<br>
          <% if (result.players[1] == algorithmId) { %><span class="glyphicon glyphicon-chevron-right"></span><% } %>
          <%- names[result.players[1]] %>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="text-right">Iterations</td>
        <td><%= result.iterations %></td>
      </tr>
      <tr
        <% if (result.points[0] >= result.points[1]) { %>class="success"<% } %>
      >
        <td class="text-right">
          <% if (result.points[0] >= result.points[1]) { %><span class="glyphicon glyphicon-tower"></span><% } %>
          <%- names[result.players[0]] %> Points
        </td>
        <td><%= result.points[0] %></td>
      </tr>
      <tr
        <% if (result.points[0] <= result.points[1]) { %>class="success"<% } %>
      >
        <td class="text-right">
          <% if (result.points[0] <= result.points[1]) { %><span class="glyphicon glyphicon-tower"></span><% } %>
          <%- names[result.players[1]] %> Points
        </td>
        <td><%= result.points[1] %></td>
      </tr>
    </tbody>
    <thead>
      <tr>
        <th colspan="2" class="text-center">Moves</th>
      </tr>
      <tr>
        <th class="col-sm-6 text-right"><%- names[result.players[0]] %></th>
        <th class="col-sm-6"><%- names[result.players[1]] %></th>
      </tr>
    </thead>
    <tbody>
      <% $.each(result.moves, function(j, move) { %>
        <tr>
          <% for (var i = 0; i < 2; i++) { %>
            <td class="
              <% if (move[i] == 'D') { %>
                danger
              <% } else if (move[i] == 'C') { %>
                success
              <% } else { %>
                warning
              <% } %>
            ">
              <% if (move[i]) { %>
                <%- move[i] %>
              <% } else { %>
                <em>Invalid</em>
              <% } %>
              (<%= result.move_points[j][i] %>)
            </td>
          <% } %>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% }) %>