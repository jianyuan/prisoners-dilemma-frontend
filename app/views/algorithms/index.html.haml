.page-header
  %h1 My Algorithms

- @algorithms.each do |algorithm|
  %article.algorithm-item
    %header
      = image_tag avatar_url(algorithm.user, 20), class: 'avatar', width: 20, height: 20
      %h4
        = link_to algorithm.user.username, '#'
        \/
        = link_to algorithm.name, algorithm
    = link_to algorithm, class: 'code-link' do
      %pre
        %code= algorithm.code

%table
  %tr
    %th User
    %th Name
    %th Code
    %th Privacy
    %th
    %th
    %th

  - @algorithms.each do |algorithm|
    %tr
      %td= algorithm.user
      %td= algorithm.name
      %td= algorithm.code
      %td= algorithm.privacy
      %td= link_to 'Show', algorithm
      %td= link_to 'Edit', edit_algorithm_path(algorithm)
      %td= link_to 'Destroy', algorithm, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Algorithm', new_algorithm_path
